<Page
    x:Class="Juda_Uwp.Features.Directory.DirectoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Juda_Uwp.Features.Directory"
    xmlns:model="using:Juda_Uwp.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary Source="ms-appx:/Styles/Styles.xaml" />
    </Page.Resources>

    <RelativePanel>
        <TextBlock 
            Style="{StaticResource HeaderTextBlockStyle}"
            Margin="25, 25, 0, 0"
            x:Name="textTitle"
            RelativePanel.AlignTopWithPanel="True"
            Text="Directory" />
        <ListView x:Name="SongDirectory" ItemsSource="{x:Bind ViewModel.Songs}" Margin="25, 120, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Tapped="ChooseSong">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Song">
                    <TextBlock Text="{x:Bind Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </RelativePanel>
</Page>
